

<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            background-color: rgb(241, 239, 239);
        }

        #cbody {
            background-color: #ffffff;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 10px;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            height: 100%;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .card-title {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }

        .description {
            font-size: 0.9rem;
            color: #666;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .dropdown-select {
            background-color: #f8f9fa;
            color: #333;
            border-radius: 5px;
            padding: 5px 10px;
            border: 1px solid #ced4da;
            transition: background-color 0.2s ease-in-out;
        }

        .dropdown-select:hover {
            background-color: #e9ecef;
        }

        .back-link {
            color: #007bff;
            text-decoration: none;
            transition: color 0.2s ease-in-out;
        }

        .back-link:hover {
            color: #0056b3;
        }

        img {
            height: 150px;
            width: 100%;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        h1 {
            margin-top: 20px;
            margin-bottom: 20px;
            font-size: 2.5rem;
            color: #333;
        }

        .card-body {
            padding: 15px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1 class="text-center"><u>All Products</u></h1>
        <div class="row p-0 m-0 justify-content-between mb-4">
            <div class="col-sm-2">
                <form action="/products" method="get">
                    <select class="form-select dropdown-select" name="category" onchange="this.form.submit()">
                        <option disabled selected>Select Category</option>
                        <option value="">All Categories</option>
                        <option value="Electronics">Electronics</option>
                        <option value="Shoes">Sports & Outdoors</option>
                        <option value="Clothes">Fashion</option>
                        <option value="Accessories">Accessories</option>
                    </select>
                </form>
            </div>
            <div class="col-sm-2 text-center">
                <a class="back-link" href="/">Back to home</a>
            </div>
        </div>
        <hr>
        <div class="row p-0 m-0">
            <% if (myAllProducts) { %>
            <% myAllProducts.forEach((product) => { %>
            <div class="col-sm-3 mt-4">
                <div class="card">
                    <img src="<%= product.productImage %>" class="card-img-top" alt="Product Image">
                    <div class="card-body text-center" id="cbody">
                        <h5 class="card-title">
                            <%= product.productName %>
                        </h5>
                        <p class="description">
                            <%= product.desc %>
                        </p>
                        <h6 class="description">
                            <%=`Rs: ${product.price}` %>
                        </h6>
                        <a class="btn btn-primary mt-2" href="/cart/<%= product._id %>">Add to cart</a>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
</body>

</html>
